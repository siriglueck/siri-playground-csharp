<Window x:Class="WpfXamlGridButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfXamlGridButton"
        mc:Ignorable="d"
         Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Button Content="Click Me!" Width="100" Height="30" FontSize="15"/>
        <Button HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button.Margin>40,0,0,0</Button.Margin>
            <Button.Width>70</Button.Width>
            <Button.Height>70</Button.Height>
            <Button.FontSize>10</Button.FontSize>
            <WrapPanel HorizontalAlignment="Center" Width="60">
                <TextBlock Foreground="Green">TextBlock</TextBlock>
                <TextBlock Foreground="Red">in WrapPanel</TextBlock>
            </WrapPanel>
        </Button>

    </Grid>

</Window>
