<Window x:Class="WpfZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="listZoos" SelectionChanged="listZoos_SelectionChanged" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="36,67,614,67" RenderTransformOrigin="0.5,0.5" Width="150" Height="300">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.434"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.492"/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <Label Content="Animals in the selected Zoo" Margin="226,22,374,0" Width="200" Height="30" VerticalAlignment="Top"/>
        <ListBox Name="listAssociatedAnimals" d:ItemsSource="{d:SampleData ItemCount=5}" Width="150" Height="300" Margin="226,67,424,67"/>
        <Label Content="List Zoo" Margin="34,22,566,0" Width="200" Height="30" VerticalAlignment="Top"/>
        <Label Content="All Animals" Margin="418,22,182,0" Width="200" Height="30" VerticalAlignment="Top"/>
        <ListBox x:Name="listAnimals" d:ItemsSource="{d:SampleData ItemCount=5}" Width="150" Height="300" Margin="418,67,232,67"/>

    </Grid>
</Window>
