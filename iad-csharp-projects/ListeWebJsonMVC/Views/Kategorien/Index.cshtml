@model IEnumerable<Kategorie>

<h2>Kategorien</h2>

<p>
    <a asp-action="Create">Neue Kategorie erstellen</a>
</p>

<table>
    <thead>
        <tr>
            <th>Titel</th>
            <th>Beschreibung</th>
            <th>Farbe</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Title</td>
                <td>@k.Description</td>
                <td>
                    <span style="display:inline-block;width:24px;height:16px;background:@k.Color;border:1px solid #ccc;"></span>
                    @k.Color
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@k.Id">Bearbeiten</a> |
                    <a asp-action="Delete" asp-route-id="@k.Id">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>