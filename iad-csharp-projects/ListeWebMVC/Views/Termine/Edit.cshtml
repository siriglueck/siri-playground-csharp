@model ListeWebJsonMVC.Models.Termin
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Termin bearbeiten";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="datetime-local" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DurationMinutes"></label>
        <input asp-for="DurationMinutes" type="number" min="1" />
        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Location"></label>
        <input asp-for="Location" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ContactPerson"></label>
        <input asp-for="ContactPerson" />
        <span asp-validation-for="ContactPerson" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories">
            <option value="">-- Kategorie wählen --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit">Speichern</button>
    <a asp-action="Index">Abbrechen</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
