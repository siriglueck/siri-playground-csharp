@model List<Aufgabe>

<h2>Aufgabenliste</h2>

<a asp-action="Create">Neue Aufgabe erstellen</a>

<table>
    <thead>
        <tr>
            <th>Titel</th>
            <th>Von</th>
            <th>Bis</th>
            <th>Kategorie</th>
            <th>Aktionen</th>
            <th>Beschreibung</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            var category = ViewBag.KategorienMap.ContainsKey(a.CategoryId)
            ? ViewBag.KategorienMap[a.CategoryId]
            : null;

            <tr>
                <td>@a.Title</td>
                <td>@a.FromDate.ToString("dd.MM.yyyy")</td>
                <td>@a.ToDate.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (category != null)
                    {
                        <span style="display:inline-block;width:24px;height:16px;background:@category.Color;border:1px solid #ccc;"></span>
                        @category.Title
                    }
                    else
                    {
                        <span>—</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@a.Id">Bearbeiten</a>
                    <a asp-action="Delete" asp-route-id="@a.Id">Löschen</a>
                </td>
                <td>
                    <button type="button" class="toggle-desc-btn" data-id="@a.Id" style="border: medium none;background: none repeat scroll 0 0 transparent;">
                        <img src="~/images/expand-icon.svg" asp-append-version="true" alt="Logo" height="32" width="32" style="margin:0 10px;" />
                    </button>
                </td>
            </tr>
            <tr id="desc-@a.Id" class="description-row" style="display:none;">
                <td colspan="6" style="background-color: #f5f5f5;">: : @a.Description</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Add toggle functionality
        document.querySelectorAll('.toggle-desc-btn').forEach(button => {
            button.addEventListener('click', () => {
                const id = button.getAttribute('data-id');
                const descRow = document.getElementById('desc-' + id);
                if (descRow.style.display === 'none') {
                    descRow.style.display = 'table-row';
                    // button.textContent = 'Verbergen';
                } else {
                    descRow.style.display = 'none';
                    // button.textContent = 'Anzeigen';
                }
            });
        });
    </script>
}
